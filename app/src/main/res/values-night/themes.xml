<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPH" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_450</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_450</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.SPH.Sheet</item>
        <item name="actionBarStyle">@style/Theme.SPH.ActionBar</item>
        <item name="customStrokeColor">@color/strokeColorDark</item>
        <item name="customStrokeWidth">2dp</item>
    </style>

    <!-- Override only for 30s theme-->
    <style name="Theme.SPH.Monochrome" parent="Theme.SPH">
        <!-- Primary -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey_100</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey_100</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>


    <style name="Theme.SPH.Sheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Theme.SPH.ModalStyle</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.SPH.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="Theme.SPH.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/backgroundColor</item>
    </style>
</resources>