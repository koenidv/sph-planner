<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changeLayout"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_slab"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Phyik-EVA" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_rounded_rectangle"
        android:backgroundTint="?attr/colorPrimary"
        android:paddingBottom="1dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:text="Heute" />

    <TextView
        android:id="@+id/courseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_rounded_rectangle"
        android:paddingBottom="1dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/dateTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:backgroundTint="@color/pink_a400"
        tools:text="Physik-LK" />

    <TextView
        android:id="@+id/lessonsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_rounded_rectangle"
        android:paddingBottom="1dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/courseTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:backgroundTint="@color/change_type_eva"
        tools:text="3 - 4" />

</androidx.constraintlayout.widget.ConstraintLayout>